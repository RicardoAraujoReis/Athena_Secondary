@page "/"

@using MudBlazor
@using System.Linq
@using Athena.Web.PainelGeral.Models

<PageTitle>Home</PageTitle>
@if ((PainelGeralBigNumbersResponse is null || !PainelGeralBigNumbersResponse.Any())) //|| (PainelGeralGraficosResponse is null || !PainelGeralGraficosResponse.Any()))
{
    <MudProgressCircular Size="MudBlazor.Size.Medium" Color="MudBlazor.Color.Dark" Indeterminate="true"></MudProgressCircular>
}
else
{
    <MudGrid Spacing="2">
        <MudItem xs="12" sm="6" md="4" lg="2">
            <MudPaper Class="pa-4 d-flex flex-column align-center text-center" Elevation="4">
                <MudIcon Icon="@Icons.Material.Filled.ShowChart" Size="MudBlazor.Size.Large" Color="MudBlazor.Color.Primary" />
                <MudTypography Variant="H4" Class="mt-2">@PainelGeralBigNumbersResponse.Where(x => x.Label == "Total de Atendimentos").Select(x => x.Value).FirstOrDefault()</MudTypography>
                <MudTypography Variant="Body2" Color="TextSecondary">@PainelGeralBigNumbersResponse.Where(x => x.Label == "Total de Atendimentos").Select(x => x.Label).FirstOrDefault()</MudTypography>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="4" lg="2">
            <MudPaper Class="pa-4 d-flex flex-column align-center text-center" Elevation="4">
                <MudIcon Icon="@Icons.Material.Filled.CalendarMonth" Size="MudBlazor.Size.Large" Color="MudBlazor.Color.Primary" />
                <MudTypography Variant="H4" Class="mt-2">@PainelGeralBigNumbersResponse.Where(x => x.Label == "Total de Atendimentos / Mês").Select(x => x.Value).FirstOrDefault()</MudTypography>
                <MudTypography Variant="Body2" Color="TextSecondary">@PainelGeralBigNumbersResponse.Where(x => x.Label == "Total de Atendimentos / Mês").Select(x => x.Label).FirstOrDefault()</MudTypography>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="4" lg="2">
            <MudPaper Class="pa-4 d-flex flex-column align-center text-center" Elevation="4">
                <MudIcon Icon="@Icons.Material.Filled.Balance" Size="MudBlazor.Size.Large" Color="MudBlazor.Color.Primary" />
                <MudTypography Variant="H4" Class="mt-2">@PainelGeralBigNumbersResponse.Where(x => x.Label == "Média Mensal").Select(x => x.Value).FirstOrDefault()</MudTypography>
                <MudTypography Variant="Body2" Color="TextSecondary">@PainelGeralBigNumbersResponse.Where(x => x.Label == "Média Mensal").Select(x => x.Label).FirstOrDefault()</MudTypography>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="4" lg="2">
            <MudPaper Class="pa-4 d-flex flex-column align-center text-center" Elevation="4">
                <MudIcon Icon="@Icons.Material.Filled.Done" Size="MudBlazor.Size.Large" Color="MudBlazor.Color.Primary" />
                <MudTypography Variant="H4" Class="mt-2">@PainelGeralBigNumbersResponse.Where(x => x.Label == "Resolvidos no Plantão").Select(x => x.Value).FirstOrDefault()</MudTypography>
                <MudTypography Variant="Body2" Color="TextSecondary">@PainelGeralBigNumbersResponse.Where(x => x.Label == "Resolvidos no Plantão").Select(x => x.Label).FirstOrDefault()</MudTypography>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="4" lg="2">
            <MudPaper Class="pa-4 d-flex flex-column align-center text-center" Elevation="4">
                <MudIcon Icon="@Icons.Material.Filled.FileOpen" Size="MudBlazor.Size.Large" Color="MudBlazor.Color.Primary" />
                <MudTypography Variant="H4" Class="mt-2">@PainelGeralBigNumbersResponse.Where(x => x.Label == "Issues Abertos").Select(x => x.Value).FirstOrDefault()</MudTypography>
                <MudTypography Variant="Body2" Color="TextSecondary">@PainelGeralBigNumbersResponse.Where(x => x.Label == "Issues Abertos").Select(x => x.Label).FirstOrDefault()</MudTypography>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="4" lg="2">
            <MudPaper Class="pa-4 d-flex flex-column align-center text-center" Elevation="4">
                <MudIcon Icon="@Icons.Material.Filled.Link" Size="MudBlazor.Size.Large" Color="MudBlazor.Color.Primary" />
                <MudTypography Variant="H4" Class="mt-2">@PainelGeralBigNumbersResponse.Where(x => x.Label == "Issues relacionados").Select(x => x.Value).FirstOrDefault()</MudTypography>
                <MudTypography Variant="Body2" Color="TextSecondary">@PainelGeralBigNumbersResponse.Where(x => x.Label == "Issues relacionados").Select(x => x.Label).FirstOrDefault()</MudTypography>
            </MudPaper>
        </MudItem>
    </MudGrid>    
}
