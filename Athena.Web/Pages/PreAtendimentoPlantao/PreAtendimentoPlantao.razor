@page "/preAtendimentoPlantao"

<MudCard Elevation="25">
    <MudCardHeader>
        <CardHeaderAvatar>
            <MudIcon Icon="@Icons.Material.Filled.Preview" />
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.body1">Pré Atendimentos Plantão</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudTable Items="@preAtendimentos" Elevation="25" Dense="true" Hover="true" Loading="@_loading" LoadingProgressColor="Color.Dark">
            <ToolBarContent>
                <MudFab Class="mr-4" Color="Color.Dark" StartIcon="@Icons.Material.Filled.Add" Size="Size.Small" OnClick="(() => CreatePreAtendimentoPlantaoAsync())" />
                <MudFab Class="mr-4" Color="Color.Dark" StartIcon="@Icons.Material.Filled.Refresh" Size="Size.Small" OnClick="(() => LoadPreAtendimentoPlantaoAsync())" />
                <MudSpacer />
                <MudSpacer />
                <MudSpacer />
                <MudSpacer />
                <MudTextField @bind-Value="searchPreAtendimentos" Placeholder="Pesquisar" Adornment="Adornment.Start" Class="mt-0">
                </MudTextField>
            </ToolBarContent>
            <HeaderContent>
                <MudTh>Id</MudTh>
                <MudTh>Descrição</MudTh>
                <MudTh>Data Criação</MudTh>
                <MudTh>Data Alteração</MudTh>
                <MudTh>Ações</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Id">@context.Id</MudTd>
                <MudTd DataLabel="Ptd_resumo">@context.Ptd_resumo</MudTd>
                <MudTd DataLabel="Ptd_datcri">@context.Ptd_datcri</MudTd>
                @if (@context.Ptd_datalt.ToString() == "01/01/0001 00:00:00")
                {
                    <MudTd>@dataAlteracao</MudTd>
                }
                else
                {
                    <MudTd DataLabel="Ptd_datalt">@context.Ptd_datalt</MudTd>
                }
                <MudTd DataLabel="Ações">
                    <MudMenu Icon="@Icons.Material.Filled.MoreVert" AriaLabel="Open user menu">
                        <!--<MudMenuItem OnClick="(() => UpdateTipoDadosListasAsync(context.Id))">Editar</MudMenuItem>
                        <MudMenuItem OnClick="(() => DeleteTipoDadosListasAsync(context.Id, context.Tid_descri))">Deletar</MudMenuItem>-->
                    </MudMenu>
                </MudTd>
            </RowTemplate>
        </MudTable>
    </MudCardContent>
</MudCard>