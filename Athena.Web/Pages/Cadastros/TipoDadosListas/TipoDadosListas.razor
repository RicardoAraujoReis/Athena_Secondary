@page "/tipoDadosListas"

<MudCard Elevation="25">
    <MudCardHeader>
        <CardHeaderAvatar>
            <MudIcon Icon="@Icons.Material.Filled.FilterList" />
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.body1">Tipos de Dados Listas</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudTable Items="@tipoDadosListas" Elevation="25" Dense="true" Hover="true" Breakpoint="Breakpoint.Sm"
                  Loading="@_loading" LoadingProgressColor="Color.Dark" Filter="new Func<TipoDadosListasResponse,bool>(FilterTipoDadosListasAsync)">            
            <ToolBarContent>
                <MudFab Class="mr-4" Color="Color.Default" StartIcon="@Icons.Material.Filled.Add" Size="Size.Small" OnClick="(() => CreateTipoDadosListasAsync())" />
                <MudFab Class="mr-4" Color="Color.Default" StartIcon="@Icons.Material.Filled.Refresh" Size="Size.Small" OnClick="(() => LoadTipoDadosListasAsync())" />
                <MudSpacer />
                <MudSpacer />
                <MudSpacer />
                <MudSpacer />
                <MudTextField @bind-Value="searchTipoDadosListas" Placeholder="Pesquisar" Adornment="Adornment.Start" Class="mt-0">
                </MudTextField>
                <MudFab Color="Color.Default" StartIcon="@Icons.Material.Filled.Search" Size="Size.Small" Class="ml-4"
                        OnClick="(() => FilterTipoDadosListasAsync(tipoDadosListas.FirstOrDefault()))" />
            </ToolBarContent>
            <HeaderContent>
                <MudTh>Id</MudTh>
                <MudTh>Descrição</MudTh>
                <MudTh>Data Criação</MudTh>
                <MudTh>Data Alteração</MudTh>                
                <MudTh>Ações</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Id">@context.Id</MudTd>
                <MudTd DataLabel="Tid_descri">@context.Tid_descri</MudTd>
                <MudTd DataLabel="Tid_datcri">@context.Tid_datcri</MudTd>
                <MudTd DataLabel="Tid_datalt">@context.Tid_datalt</MudTd>                
                <MudTd DataLabel="Ações">
                    <MudMenu Icon="@Icons.Material.Filled.MoreVert" AriaLabel="Open user menu">
                        <MudMenuItem OnClick="(() => UpdateTipoDadosListasAsync(context.Id))">Editar</MudMenuItem>
                        <MudMenuItem OnClick="(() => DeleteTipoDadosListasAsync(context.Id, context.Tid_descri))">Deletar</MudMenuItem>
                    </MudMenu>
                </MudTd>
            </RowTemplate>
        </MudTable>
    </MudCardContent>
</MudCard>