@page "/dadosListas"

<MudCard Elevation="25">
    <MudCardHeader>
        <CardHeaderAvatar>
            <MudIcon Icon="@Icons.Material.Filled.List" />
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.body1">Dados Listas</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudTable Items="@dadosListas" Elevation="25" Dense="true" Hover="true" Breakpoint="Breakpoint.Sm"
                  Loading="@_loading" LoadingProgressColor="Color.Dark" Filter="new Func<DadosListasResponse,bool>(FilterDadosListasAsync)">
            <ToolBarContent>
                <MudFab Class="mr-4" Color="Color.Default" StartIcon="@Icons.Material.Filled.Add" Size="Size.Small" OnClick="(() => CreateDadosListasAsync())" />
                <MudFab Class="mr-4" Color="Color.Default" StartIcon="@Icons.Material.Filled.Refresh" Size="Size.Small" OnClick="(() => LoadDadosListasAsync())" />
                <MudSpacer />
                <MudSpacer />
                <MudSpacer />
                <MudSpacer />
                <MudTextField @bind-Value="searchDadosListas" Placeholder="Pesquisar" Adornment="Adornment.Start" Class="mt-0">
                </MudTextField>
                <MudFab Color="Color.Default" StartIcon="@Icons.Material.Filled.Search" Size="Size.Small" Class="ml-4"
                        OnClick="(() => FilterDadosListasAsync(dadosListas.FirstOrDefault()))" />
            </ToolBarContent>
            <HeaderContent>
                <MudTh>Id</MudTh>
                <MudTh>Descrição</MudTh>
                <MudTh>Tipo Dados Listas</MudTh>
                <MudTh>Aplicação</MudTh>
                <MudTh>Data Criação</MudTh>
                <MudTh>Data Alteração</MudTh>
                <MudTh>Ações</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Id">@context.Id</MudTd>
                <MudTd DataLabel="Dal_valor">@context.Dal_valor</MudTd>
                <MudTd DataLabel="Dal_tid_identi">@context.TipoDadosListas.Tid_descri</MudTd>
                <MudTd DataLabel="Dal_aplicacao">@context.Dal_aplicacao</MudTd>
                <MudTd DataLabel="Dal_datcri">@context.Dal_datcri</MudTd>
                @if (@context.Dal_datalt.ToString() == "01/01/0001 00:00:00")
                {
                    <MudTd>@dataAlteracao</MudTd>
                }
                else
                {
                    <MudTd DataLabel="Dal_datalt">@context.Dal_datalt</MudTd>
                }
                <MudTd DataLabel="Ações">
                    <MudMenu Icon="@Icons.Material.Filled.MoreVert" AriaLabel="Open user menu">
                        <MudMenuItem OnClick="(() => UpdateDadosListasAsync(context.Id))">Editar</MudMenuItem>
                        <MudMenuItem OnClick="(() => DeleteDadosListasAsync(context.Id, context.Dal_valor))">Deletar</MudMenuItem>
                    </MudMenu>
                </MudTd>
            </RowTemplate>
        </MudTable>
    </MudCardContent>
</MudCard>