<MudForm @ref="_form" Model="UpdateLinhaNegocioRequest">
    <MudDialog>
        <TitleContent>
            Editar Linha de Negócio
        </TitleContent>
        <DialogContent>
            <MudTextField @bind-Value="UpdateLinhaNegocioRequest.Lhn_descri" Label="Descrição da Linha de Negócio" Variant="Variant.Outlined">Linha de Negócio</MudTextField>
            <MudTextField @bind-Value="UpdateLinhaNegocioRequest.Lhn_ativo" Label="Ativo" Variant="Variant.Outlined">Ativo</MudTextField>
        </DialogContent>
        <DialogActions>
            <MudButton OnClick="Cancel">Cancelar</MudButton>
            <MudButton Color="Color.Primary" OnClick="SaveAsync">Salvar</MudButton>
        </DialogActions>
    </MudDialog>
</MudForm>