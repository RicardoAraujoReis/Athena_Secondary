<MudForm @ref="_form" Model="CreateCategoriaAtendimentoRequest" Validation="@(_validator.Validate)" ValidationDelay="0">
    <MudDialog>
        <TitleContent>
            Adicionar Categoria de Atendimento
        </TitleContent>
        <DialogContent>
            <MudGrid>
                @if ((_categorias == null || !_categorias.Any()) && (_niveisCategorias is null || !_niveisCategorias.Any()))
                {
                    <MudText Typo="Typo.h6">Loading...</MudText>
                }
                else
                {
                    <MudItem xs="12" sm="6" md="6">
                        <MudTextField @bind-Value="CreateCategoriaAtendimentoRequest.Cat_valor" Label="Valor da Categoria" Margin="Margin.Dense"
                                      For="@(() => CreateCategoriaAtendimentoRequest.Cat_valor)"
                                      Variant="Variant.Outlined">
                            CategoriaAtendimento
                        </MudTextField>
                    </MudItem>
                    <MudItem xs="12" sm="6" md="6">
                        <MudSelect @bind-Value="categoriaSelected" T="int?" Label="Selecione a Categoria Pai" AdornmentColor="Color.Secondary" Clearable="true" AnchorOrigin="Origin.BottomCenter">
                            @foreach (var item in _categorias)
                            {
                                <MudSelectItem Value="@(item.Id as int?)">@item.Cat_valor.ToUpper()</MudSelectItem>
                            }
                        </MudSelect>
                    </MudItem>                                       
                    <MudItem xs="12" sm="6" md="6">
                        <MudSelect @bind-Value="categoriaSelected2" Label="Nível da Categoria" AdornmentColor="Color.Secondary" Clearable="true"
                                   AnchorOrigin="Origin.BottomCenter" Required="true" RequiredError="Selecione uma opção">
                            @foreach (var item in niveisCategorias)
                            {
                                <MudSelectItem Value="@item">@item</MudSelectItem>
                            }
                        </MudSelect>
                    </MudItem>
                }
            </MudGrid>
        </DialogContent>
        <DialogActions>
            <MudButton OnClick="Cancel">Cancelar</MudButton>
            <MudButton Color="Color.Primary" OnClick="SubmitAsync" Disabled="!CheckForm()">Salvar</MudButton>
        </DialogActions>
    </MudDialog>
</MudForm>

