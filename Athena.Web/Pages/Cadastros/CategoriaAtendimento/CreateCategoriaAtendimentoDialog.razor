<MudForm @ref="_form" Model="CreateCategoriaAtendimentoRequest" Validation="@(_validator.Validate)" ValidationDelay="0">
    <MudDialog>
        <TitleContent>
            Adicionar CategoriaAtendimento
        </TitleContent>
        <DialogContent>
            <MudGrid>
                <MudItem xs="12" sm="6" md="6">
                    <MudTextField @bind-Value="CreateCategoriaAtendimentoRequest.Cat_valor" Label="Valor da Categoria" Margin="Margin.Dense" 
                        For="@(() => CreateCategoriaAtendimentoRequest.Cat_valor)"
                        Variant="Variant.Outlined">CategoriaAtendimento
                    </MudTextField>
                </MudItem>
                <MudItem xs="12" sm="6" md="6">
                    <MudTextField @bind-Value="CreateCategoriaAtendimentoRequest.Cat_catpai" Label="Categoria Pai" Margin="Margin.Dense"
                        Variant="Variant.Outlined">CategoriaAtendimento
                    </MudTextField>
                </MudItem>
                <MudItem xs="12" sm="6" md="6">
                    <MudTextField @bind-Value="CreateCategoriaAtendimentoRequest.Cat_nivel" Label="Nível da Categoria" Margin="Margin.Dense"
                        For="@(() => CreateCategoriaAtendimentoRequest.Cat_nivel)"
                        Variant="Variant.Outlined">CategoriaAtendimento
                    </MudTextField>
                </MudItem>
            </MudGrid>
        </DialogContent>
        <DialogActions>
            <MudButton OnClick="Cancel">Cancelar</MudButton>
            <MudButton Color="Color.Primary" OnClick="SubmitAsync" Disabled="!CheckForm()">Salvar</MudButton>
        </DialogActions>
    </MudDialog>
</MudForm>