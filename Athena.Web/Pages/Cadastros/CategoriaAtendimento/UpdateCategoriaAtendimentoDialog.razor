<MudForm @ref="_form" Model="UpdateCategoriaAtendimentoRequest" Validation="@(_validator.Validate)" ValidationDelay="0">
    <MudDialog>
        <TitleContent>
            Editar CategoriaAtendimento
        </TitleContent>
        <DialogContent>
            <MudGrid>
                <MudItem xs="12" sm="6" md="6">
                    <MudTextField @bind-Value="UpdateCategoriaAtendimentoRequest.Cat_valor" Label="Descrição da Categoria de Atendimento" Margin="Margin.Dense"
                        For="@(() => UpdateCategoriaAtendimentoRequest.Cat_valor)" Variant="Variant.Outlined">
                        CategoriaAtendimento
                    </MudTextField>
                </MudItem>
                <MudItem xs="12" sm="6" md="6">
                    <MudTextField @bind-Value="UpdateCategoriaAtendimentoRequest.Cat_catpai" Label="Categoria Pai" Variant="Variant.Outlined" Margin="Margin.Dense">
                        Categoria Pai
                    </MudTextField>
                </MudItem>
                <MudItem xs="12" sm="6" md="6">
                    <MudTextField @bind-Value="UpdateCategoriaAtendimentoRequest.Cat_nivel" Label="Nível" Margin="Margin.Dense"
                        For="@(() => UpdateCategoriaAtendimentoRequest.Cat_nivel)" Variant="Variant.Outlined">
                        Nível
                    </MudTextField>
                </MudItem>
                <MudItem xs="12" sm="6" md="6">
                    <MudTextField @bind-Value="UpdateCategoriaAtendimentoRequest.Cat_ativo" Label="Ativo" Margin="Margin.Dense"
                        For="@(() => UpdateCategoriaAtendimentoRequest.Cat_ativo)" Variant="Variant.Outlined">
                        Ativo
                    </MudTextField>
                </MudItem>
            </MudGrid>                                    
        </DialogContent>
        <DialogActions>
            <MudButton OnClick="Cancel">Cancelar</MudButton>
            <MudButton Color="Color.Primary" OnClick="SubmitAsync" Disabled="!CheckForm()">Salvar</MudButton>
        </DialogActions>
    </MudDialog>
</MudForm>