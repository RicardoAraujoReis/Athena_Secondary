@using Common.Responses;

@page "/cliente"

<MudCard Elevation="25">
    <MudCardHeader>
        <CardHeaderAvatar>
            <MudIcon Icon="@Icons.Material.Filled.AddLocation" />
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.body1">Clientes</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudTable Items="@clientes" Elevation="25" Dense="true" Hover="true" Breakpoint="Breakpoint.Sm" Loading="@_loading" LoadingProgressColor="Color.Dark"
                  Filter="new Func<ClienteResponse,bool>(FilterClienteAsync)">
            <ToolBarContent>
                <MudFab Class="mr-4" Color="Color.Default" StartIcon="@Icons.Material.Filled.Add" Size="Size.Small" OnClick="(() => CreateClienteAsync())" />
                <MudFab Class="mr-4" Color="Color.Default" StartIcon="@Icons.Material.Filled.Refresh" Size="Size.Small" OnClick="(() => LoadClienteListAsync())" />
                <MudSpacer />
                <MudSpacer />
                <MudSpacer />
                <MudSpacer />
                <MudTextField @bind-Value="searchCliente" Placeholder="Pesquisar" Adornment="Adornment.Start" Class="mt-0">
                </MudTextField>
                <MudFab Color="Color.Default" StartIcon="@Icons.Material.Filled.Search" Size="Size.Small" Class="ml-4"
                        OnClick="(() => FilterClienteAsync(clientes.FirstOrDefault()))" />
            </ToolBarContent>
            <HeaderContent>
                <MudTh>Id</MudTh>
                <MudTh>Descrição</MudTh>
                <MudTh>Ativo</MudTh>
                <MudTh>Data de Criação</MudTh>
                <MudTh>Últ. Alteração</MudTh>
                <MudTh>Linha de Negócio</MudTh>
                <MudTh>Ações</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Id">@context.Id</MudTd>
                <MudTd DataLabel="Cli_descri">@context.Cli_descri</MudTd>
                @if (@context.Cli_ativo == "S")
                {
                    <MudTd DataLabel="Cli_ativo">SIM</MudTd>
                }
                else
                {
                    <MudTd DataLabel="Cli_ativo">NAO</MudTd>
                }                
                <MudTd DataLabel="Cli_datcri">@context.Cli_datcri</MudTd>
                @if (@context.Cli_datalt.ToString() == "01/01/0001 00:00:00")
                {
                    <MudTd>@dataAlteracao</MudTd>
                }
                else
                {
                    <MudTd DataLabel="Cli_datalt">@context.Cli_datalt</MudTd>
                }                
                <MudTd DataLabel="linhaNegocio">@context.LinhaNegocio.Lhn_descri</MudTd>
                <MudTd DataLabel="Ações">
                    <MudMenu Icon="@Icons.Material.Filled.MoreVert" AriaLabel="Open user menu">
                        <MudMenuItem OnClick="(() => UpdateClienteAsync(context.Id))">Editar</MudMenuItem>
                        <MudMenuItem OnClick="(() => DeleteClienteAsync(context.Id, context.Cli_descri))">Deletar</MudMenuItem>
                    </MudMenu>
                </MudTd>
            </RowTemplate>
        </MudTable>
    </MudCardContent>
</MudCard>